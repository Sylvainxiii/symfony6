{% extends 'base.html.twig' %}

{% block title %}Hello {{app.user.prenom}}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Bonjour {{app.user.prenom}}! ✅</h1>

{% if is_granted('ROLE_EMPLOYEE')%}
<h2>{{app.user.prenom}} vous êtes employé.</h2>
{% endif %}

{% if is_granted('ROLE_USER')%}
<h2>{{app.user.prenom}} vous êtes client.</h2>
{% endif %}

{% if is_granted('ROLE_ADMIN')%}
<h2>{{app.user.prenom}} vous êtes administrateur du site web.</h2>
{% endif %}

</div>
{% endblock %}
